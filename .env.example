# .env.example
# Copy to .env and fill in the values

# Discord bot token obtained from Discord Developer Portal
DISCORD_TOKEN=

# OpenRouter API key for accessing AI models
OPENROUTER_API_KEY=

# Base URL for OpenRouter API
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model identifier for the AI service
MODEL_ID=google/gemini-2.5-flash-image-preview

# Logging level (e.g., DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Directory for caching data (relative to project root)
CACHE_DIR=.cache

# Comma-separated list of allowed image file types for upload
ALLOWED_IMAGE_TYPES=png,jpg,jpeg,webp

# Maximum allowed file size for images in MB
MAX_IMAGE_MB=10

# Maximum number of concurrent operations
CONCURRENCY=2

# === Admin Dashboard Configuration ===

# Admin Authentication - Comma-separated Discord user IDs allowed admin access
ADMIN_USER_IDS=

# Session timeout for admin dashboard (20 minutes default)
ADMIN_SESSION_TTL_SECONDS=1200

# One-time URL lifetime for dashboard access (5 minutes default)
ADMIN_NONCE_TTL_SECONDS=300

# Discord OAuth2 Application ID and Secret from Discord Developer Portal
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# OAuth2 callback URL after Discord authorization
OAUTH_REDIRECT_URI=https://yourdomain.com/admin/callback

# Random secret key for session management (generate with secrets.token_hex(32))
DASHBOARD_SECRET_KEY=

# File paths for persistent data
SETTINGS_FILE=./data/settings.json
AUDIT_LOG_FILE=./data/audit.log

# Optional: Discord channel ID for audit notifications
DISCORD_ADMIN_LOG_CHANNEL_ID=

# Dashboard bind address and port
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000